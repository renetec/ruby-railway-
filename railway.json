{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "bundle exec rails server -b 0.0.0.0 -p $PORT"
  },
  "environments": {
    "production": {
      "variables": {
        "NIXPACKS_NO_CACHE": "1",
        "NO_CACHE": "1",
        "RAILS_ENV": "production"
      }
    }
  }
}