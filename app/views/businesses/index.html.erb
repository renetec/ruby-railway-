<% content_for :title, t('businesses.index.title') %>

<div class="min-h-screen relative overflow-hidden">
  <!-- Stunning Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-bg via-secondary-bg to-primary-bg"></div>
  
  <div class="container-wide relative z-10">
    <!-- Epic Header Section -->
    <div class="text-center mb-20 animate-slide-up">
      <div class="inline-flex items-center px-6 py-3 bg-glass-bg backdrop-filter backdrop-blur-lg border border-glass-border rounded-full mb-8">
        <span class="w-3 h-3 bg-vibrant-purple rounded-full mr-4 animate-pulse"></span>
        <span class="text-text-secondary text-sm font-medium font-display"><%= t('businesses.index.subtitle') %></span>
      </div>
      
      <h1 class="font-display text-2xl lg:text-3xl font-black text-text-primary mb-8 leading-tight">
        <%= t('businesses.index.business') %>
        <br>
        <span class="bg-gradient-to-r from-electric-blue via-vibrant-purple to-emerald-green bg-clip-text text-transparent"><%= t('businesses.index.directory') %></span>
      </h1>
      
      <p class="font-content text-xl text-text-secondary max-w-4xl mx-auto mb-12 leading-relaxed">
        <%= t('businesses.index.description') %>
      </p>
      
      <% if user_signed_in? %>
        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <%= link_to my_businesses_businesses_path, class: "btn-secondary-lg" do %>
            <span class="relative z-10 flex items-center font-display">
              <%= t('businesses.index.my_businesses') %>
              <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </span>
          <% end %>
          <%= link_to new_business_path, class: "btn-primary-lg" do %>
            <span class="relative z-10 flex items-center font-display">
              <%= t('businesses.index.add_business') %>
              <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>
  
    <div class="bento-grid-layout">
    <!-- Filters Sidebar -->
    <div class="lg:col-span-1">
        <div class="card-stunning overflow-hidden sticky top-4">
          <div class="bg-gradient-to-r from-electric-blue/10 to-vibrant-purple/10 backdrop-filter backdrop-blur-sm px-6 py-4 border-b border-glass-border">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-gradient-to-br from-electric-blue to-vibrant-purple rounded-2xl flex items-center justify-center shadow-lg">
                <span class="text-white text-lg">üîç</span>
              </div>
              <h3 class="font-display text-xl font-bold text-text-primary"><%= t('businesses.index.filter.title') %></h3>
            </div>
          </div>
          
          <div class="p-6">
        
            <%= form_with url: businesses_path, method: :get, local: true, class: "space-y-6" do |form| %>
              <!-- Search -->
              <div class="form-group">
                <%= form.label :search, t('businesses.index.filter.search'), class: "form-label" %>
                <%= form.text_field :search, placeholder: t('businesses.index.filter.search_placeholder'), 
                                   value: params[:search], 
                                   class: "input-modern" %>
              </div>
          
              <!-- Category -->
              <div class="form-group">
                <%= form.label :category, t('businesses.index.filter.category'), class: "form-label" %>
                <%= form.select :category, 
                               options_for_select([[t('businesses.index.filter.all_categories'), ""]] + @categories.map { |cat| [cat.humanize, cat] }, params[:category]),
                               {}, 
                               { class: "input-modern" } %>
              </div>
          
          <!-- Location -->
          <div>
            <%= form.label :location, "Location", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.select :location, 
                               options_for_select([[t('businesses.index.filter.all_locations'), ""]] + @locations.map { |loc| [loc, loc] }, params[:location]),
                               {}, 
                               { class: "input-modern" } %>
          </div>
          
              <!-- Special Filters -->
              <div class="space-y-3">
                <div class="checkbox-modern">
                  <%= check_box_tag :featured, 'true', params[:featured] == 'true', class: "checkbox-input" %>
                  <%= label_tag :featured, t('businesses.index.filter.featured_only'), class: "checkbox-label" %>
                </div>
                <div class="checkbox-modern">
                  <%= check_box_tag :with_jobs, 'true', params[:with_jobs] == 'true', class: "checkbox-input" %>
                  <%= label_tag :with_jobs, t('businesses.index.filter.currently_hiring'), class: "checkbox-label" %>
                </div>
              </div>
          
              <div class="space-y-3">
                <%= form.submit t('businesses.index.filter.search_button'), class: "btn-primary-full" %>
                <%= link_to t('businesses.index.filter.clear_filters'), businesses_path, class: "btn-secondary-full" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    
      <!-- Businesses Grid -->
      <div class="lg:col-span-3">
        <% if @businesses.any? %>
          <div class="bento-grid-layout gap-8 mb-12">
          <% @businesses.each do |business| %>
              <div class="card-stunning overflow-hidden group hover:scale-105 transition-all duration-500 animate-slide-up">
                <div class="p-8">
                  <div class="flex items-start justify-between mb-6">
                    <div class="flex-1">
                      <div class="flex items-center mb-4">
                      <% if business.logo.attached? %>
                          <%= image_tag business.logo, alt: business.name, class: "w-16 h-16 object-cover rounded-2xl mr-4 shadow-xl" %>
                      <% else %>
                          <div class="w-16 h-16 bg-gradient-to-br from-electric-blue to-vibrant-purple rounded-2xl flex items-center justify-center mr-4 shadow-xl">
                            <span class="text-white font-bold text-xl"><%= business.name.first.upcase %></span>
                        </div>
                      <% end %>
                      <div>
                          <h3 class="font-display text-2xl font-bold text-text-primary group-hover:text-electric-blue transition-colors mb-2">
                            <%= link_to business.name, business_path(business) %>
                          </h3>
                          <span class="inline-flex items-center px-3 py-1 bg-gradient-to-r from-electric-blue/20 to-vibrant-purple/20 border border-electric-blue/30 rounded-full text-sm font-bold text-electric-blue">
                            <%= business.category.humanize %>
                          </span>
                      </div>
                    </div>
                  </div>
                  <div class="flex flex-col items-end">
                    <% if business.featured? %>
                        <span class="inline-flex items-center px-3 py-1 bg-gradient-to-r from-warm-gold/20 to-emerald-green/20 border border-warm-gold/40 rounded-full text-sm font-bold text-warm-gold mb-3">
                          <%= t('businesses.index.featured') %>
                        </span>
                    <% end %>
                    <% if business.average_rating > 0 %>
                      <div class="flex items-center">
                        <span class="text-yellow-500">‚òÖ</span>
                        <span class="text-sm text-gray-600 ml-1">
                          <%= business.average_rating %> (<%= business.reviews_count %>)
                        </span>
                      </div>
                    <% end %>
                  </div>
                </div>
                
                  <p class="font-content text-text-secondary mb-6 leading-relaxed text-lg">
                    <%= truncate(business.description, length: 120) %>
                  </p>
                
                  <div class="space-y-3 mb-6">
                    <% if business.has_location? %>
                      <div class="flex items-center text-text-secondary">
                        <span class="w-6 h-6 bg-gradient-to-br from-emerald-green to-electric-blue rounded-lg flex items-center justify-center mr-3">
                          <span class="text-white text-sm"></span>
                        </span>
                        <span class="font-medium"><%= business.full_address %></span>
                      </div>
                    <% end %>
                    <% if business.phone.present? %>
                      <div class="flex items-center text-text-secondary">
                        <span class="w-6 h-6 bg-gradient-to-br from-vibrant-purple to-electric-blue rounded-lg flex items-center justify-center mr-3">
                          <span class="text-white text-sm"></span>
                        </span>
                        <span class="font-medium"><%= business.phone %></span>
                      </div>
                    <% end %>
                    <% if business.website.present? %>
                      <div class="flex items-center text-text-secondary">
                        <span class="w-6 h-6 bg-gradient-to-br from-electric-blue to-warm-gold rounded-lg flex items-center justify-center mr-3">
                          <span class="text-white text-sm"></span>
                        </span>
                        <span class="font-medium">
                          <%= link_to t('businesses.index.visit_website'), business.website, target: "_blank", 
                                     class: "text-electric-blue hover:text-vibrant-purple transition-colors" %>
                        </span>
                      </div>
                    <% end %>
                  </div>
                
                  <div class="flex items-center justify-between">
                    <div class="text-sm text-text-secondary">
                      <% if business.active_jobs_count > 0 %>
                        <span class="inline-flex items-center px-3 py-1 bg-gradient-to-r from-emerald-green/20 to-electric-blue/20 border border-emerald-green/30 rounded-full text-sm font-bold text-emerald-green">
                          <%= pluralize(business.active_jobs_count, t('businesses.index.job_opening')) %>
                        </span>
                      <% else %>
                        <span class="font-medium"><%= t('businesses.index.listed_by', name: business.user.name) %></span>
                      <% end %>
                    </div>
                    <%= link_to t('businesses.index.view_details'), business_path(business), 
                               class: "text-electric-blue hover:text-vibrant-purple font-bold transition-colors" %>
                  </div>
                </div>
              </div>
          <% end %>
          </div>
          
          <!-- Pagination -->
          <div class="flex justify-center mt-12">
            <%= paginate @businesses if respond_to?(:paginate) %>
          </div>
        <% else %>
          <div class="text-center py-16">
            <div class="w-24 h-24 mx-auto mb-8 bg-gradient-to-br from-electric-blue/20 to-vibrant-purple/20 backdrop-filter backdrop-blur-sm border border-glass-border rounded-3xl flex items-center justify-center">
              <span class="text-4xl"></span>
            </div>
            <h3 class="font-display text-3xl font-bold text-text-primary mb-6"><%= t('businesses.index.no_businesses') %></h3>
            <p class="font-content text-text-secondary mb-8 text-lg max-w-md mx-auto leading-relaxed">
              <%= t('businesses.index.no_businesses_description') %>
            </p>
            <% if user_signed_in? %>
              <%= link_to new_business_path, class: "btn-primary-lg" do %>
                <span class="relative z-10 flex items-center font-display">
                  <%= t('businesses.index.add_first_business') %>
                  <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                </span>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>