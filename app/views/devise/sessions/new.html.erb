<!-- 2025 Modern Login Design -->
<div class="min-h-screen flex items-center justify-center relative overflow-hidden">
  <!-- Stunning Background with Gradients -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-bg via-secondary-bg to-primary-bg"></div>
  <div class="absolute inset-0 bg-gradient-to-t from-bg-primary/90 via-bg-secondary/80 to-transparent"></div>
  
  <!-- Floating Background Elements -->
  <div class="absolute top-10 left-10 w-32 h-32 bg-gradient-to-br from-electric-blue/20 to-vibrant-purple/20 rounded-full blur-3xl animate-pulse"></div>
  <div class="absolute bottom-10 right-10 w-24 h-24 bg-gradient-to-br from-emerald-green/20 to-warm-gold/20 rounded-full blur-2xl animate-float"></div>
  <div class="absolute top-1/2 left-1/3 w-16 h-16 bg-gradient-to-br from-vibrant-purple/30 to-electric-blue/30 rounded-full blur-xl animate-bounce opacity-60"></div>

  <div class="relative z-10 max-w-md w-full space-y-8 p-6">
    <!-- Logo & Header -->
    <div class="text-center">
      <div class="flex items-center justify-center mb-6">
        <div>
          <%= link_to root_path, class: "font-display text-3xl font-black text-text-primary hover:text-electric-blue transition-colors duration-300" do %>
            Pacomien
          <% end %>
        </div>
      </div>
      <h2 class="text-display text-3xl font-bold text-text-primary mb-2">
        <%= t('devise.sessions.sign_in', default: 'Welcome Back') %>
      </h2>
      <p class="text-text-secondary">
        <%= t('devise.sessions.sign_in_subtitle', default: 'Sign in to your account to continue') %>
      </p>
    </div>
    
    <!-- Glass Card -->
    <div class="glass-surface-lg rounded-3xl p-8 shadow-soft-xl border border-glass-border-2">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="space-y-6">
          <!-- Email Field -->
          <div class="relative">
            <%= f.label :email, class: "form-label text-text-primary font-medium mb-2", 
                        for: "user_email" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                </svg>
              </div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                                placeholder: t('devise.placeholders.email', default: 'Enter your email'),
                                class: "glass-surface w-full pl-12 pr-4 py-4 rounded-2xl border border-glass-border-1 bg-glass-surface-1 text-text-primary placeholder-text-tertiary focus:outline-none focus:border-electric-blue focus:ring-4 focus:ring-electric-blue/20 transition-all duration-300 backdrop-blur-sm" %>
            </div>
          </div>

          <!-- Password Field -->
          <div class="relative">
            <%= f.label :password, class: "form-label text-text-primary font-medium mb-2", 
                        for: "user_password" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
              </div>
              <%= f.password_field :password, autocomplete: "current-password",
                                  placeholder: t('devise.placeholders.password', default: 'Enter your password'),
                                  class: "glass-surface w-full pl-12 pr-4 py-4 rounded-2xl border border-glass-border-1 bg-glass-surface-1 text-text-primary placeholder-text-tertiary focus:outline-none focus:border-electric-blue focus:ring-4 focus:ring-electric-blue/20 transition-all duration-300 backdrop-blur-sm" %>
            </div>
          </div>

          <!-- Remember Me -->
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "h-4 w-4 text-electric-blue focus:ring-electric-blue border-glass-border-2 rounded bg-glass-surface-1" %>
                <%= f.label :remember_me, t('devise.sessions.remember_me', default: 'Remember me'), 
                            class: "ml-3 text-sm text-text-secondary font-medium" %>
              </div>
              <%= link_to t('devise.sessions.forgot_password', default: 'Forgot password?'), 
                          new_password_path(resource_name), 
                          class: "text-sm text-electric-blue hover:text-vibrant-purple font-medium transition-colors duration-300" %>
            </div>
          <% end %>

          <!-- Sign In Button -->
          <div>
            <%= f.submit t('devise.sessions.sign_in', default: 'Sign In'),
                        class: "btn-hero-primary w-full py-4 px-6 text-white font-semibold rounded-2xl shadow-soft-lg hover:shadow-soft-xl transform hover:scale-105 transition-all duration-300 relative overflow-hidden" %>
          </div>
        </div>
      <% end %>

      <!-- Sign Up Link -->
      <div class="mt-8 text-center">
        <p class="text-text-secondary text-sm">
          <%= t('devise.sessions.no_account', default: "Don't have an account?") %>
        </p>
        <%= link_to t('devise.sessions.sign_up', default: 'Create Account'), 
                    new_registration_path(resource_name), 
                    class: "inline-block mt-2 btn-hero-secondary px-6 py-3 rounded-2xl font-semibold transition-all duration-300 hover:scale-105" %>
      </div>
      
      <!-- Additional Links -->
      <div class="mt-6 flex justify-center space-x-4 text-sm">
        <%= render "devise/shared/links" %>
      </div>
    </div>
    
    <!-- Footer Text -->
    <div class="text-center mt-8">
      <p class="text-text-tertiary text-xs">
        <%= t('devise.sessions.secure_login', default: 'Your login is secure and encrypted') %>
      </p>
    </div>
  </div>
</div>