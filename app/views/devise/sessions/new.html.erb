<div class="min-h-screen relative overflow-hidden flex items-center justify-center">
  <!-- Modern Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-bg via-secondary-bg to-primary-bg"></div>
  
  <!-- Animated Background Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-vibrant-purple opacity-10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-electric-blue opacity-10 rounded-full blur-3xl animate-pulse delay-700"></div>
  </div>

  <div class="relative z-10 w-full max-w-md mx-auto px-6">
    <!-- Logo/Title -->
    <div class="text-center mb-8">
      <div class="mb-6">
        <%= link_to root_path, class: "inline-block hover:scale-105 transition-transform duration-300" do %>
          <%= image_tag "pacomien-logo.jpg", 
              alt: "Pacomien Logo", 
              class: "w-32 h-20 mx-auto rounded-2xl shadow-2xl object-contain",
              role: "img" %>
        <% end %>
      </div>
      <h1 class="font-display text-5xl font-black text-text-primary mb-4">
        <%= t('devise.sessions.sign_in') %>
      </h1>
      <p class="text-text-secondary text-lg">
        <%= t('devise.sessions.sign_in_subtitle') %>
      </p>
    </div>

    <!-- Login Card -->
    <div class="card-stunning p-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
        <div class="space-y-6">
          <!-- Email Field -->
          <div>
            <%= f.label :email, "ðŸ“§ #{t('devise.sessions.email_label')}", class: "block text-sm font-bold text-text-primary mb-3" %>
            <div class="relative">
              <%= f.email_field :email, 
                              autofocus: true, 
                              autocomplete: "email",
                              placeholder: "example@email.com",
                              class: "w-full px-4 py-4 pl-12 bg-white border-2 border-gray-200 rounded-xl text-gray-900 placeholder-gray-500 focus:outline-none focus:border-electric-blue focus:ring-4 focus:ring-electric-blue/20 transition-all font-medium shadow-sm hover:shadow-md" %>
              <svg class="w-6 h-6 text-electric-blue absolute left-3 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
          </div>

          <!-- Password Field -->
          <div>
            <%= f.label :password, "ðŸ”‘ #{t('devise.sessions.password_label')}", class: "block text-sm font-bold text-text-primary mb-3" %>
            <div class="relative">
              <%= f.password_field :password, 
                                 autocomplete: "current-password",
                                 placeholder: "Enter your password",
                                 class: "w-full px-4 py-4 pl-12 bg-white border-2 border-gray-200 rounded-xl text-gray-900 placeholder-gray-500 focus:outline-none focus:border-electric-blue focus:ring-4 focus:ring-electric-blue/20 transition-all font-medium shadow-sm hover:shadow-md" %>
              <svg class="w-6 h-6 text-electric-blue absolute left-3 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
          </div>

          <!-- Remember Me -->
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center justify-between">
              <label class="flex items-center cursor-pointer group">
                <%= f.check_box :remember_me, class: "sr-only peer" %>
                <div class="relative">
                  <div class="w-10 h-6 bg-surface-bg rounded-full peer peer-checked:bg-electric-blue transition-colors"></div>
                  <div class="absolute left-1 top-1 bg-white w-4 h-4 rounded-full transition-transform peer-checked:translate-x-4"></div>
                </div>
                <span class="ml-3 text-text-secondary group-hover:text-text-primary transition-colors"><%= t('devise.sessions.remember_me') %></span>
              </label>
              
              <%= link_to t('devise.sessions.forgot_password'), new_password_path(resource_name), 
                        class: "text-sm text-electric-blue hover:text-vibrant-purple transition-colors" %>
            </div>
          <% end %>

          <!-- Submit Button -->
          <div class="pt-4">
            <%= f.submit "ðŸš€ #{t('devise.sessions.sign_in_button')}", 
                       class: "w-full py-4 px-6 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-black text-xl rounded-xl shadow-2xl transform hover:scale-105 hover:shadow-3xl transition-all duration-300 cursor-pointer border-2 border-white/20 hover:border-white/40",
                       style: "color: white !important; background: linear-gradient(90deg, #2563eb 0%, #9333ea 100%) !important;" %>
          </div>
        </div>
      <% end %>

      <!-- Divider -->
      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-glass-border"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-surface-bg text-text-secondary"><%= t('devise.sessions.no_account') %></span>
        </div>
      </div>

      <!-- Sign Up Link -->
      <div class="text-center">
        <%= link_to new_registration_path(resource_name), 
                   class: "text-electric-blue hover:text-vibrant-purple transition-colors font-semibold text-sm underline decoration-2 underline-offset-2" do %>
          âœ¨ <%= t('devise.sessions.create_account') %>
        <% end %>
      </div>
    </div>

    <!-- Footer Links -->
    <div class="mt-8 text-center">
      <%= link_to t('devise.sessions.back_home'), root_path, 
                 class: "text-text-secondary hover:text-text-primary transition-colors inline-flex items-center group" %>
    </div>
  </div>
</div>