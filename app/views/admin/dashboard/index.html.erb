        </div>
      </div>

      <!-- Jobs Count -->
      <div class="glass-surface-lg rounded-3xl p-6 shadow-soft-xl border border-glass-border-2">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-text-secondary text-sm font-medium">Jobs</p>
            <p class="text-text-primary text-3xl font-bold"><%= @jobs_count %></p>
          </div>
