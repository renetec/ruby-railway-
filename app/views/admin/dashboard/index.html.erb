    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
      <!-- Users Management -->
      <div class="glass-surface-lg rounded-3xl p-6 shadow-soft-xl border border-glass-border-2">
        <h3 class="text-text-primary text-xl font-bold mb-4">ğŸ‘¥ Users Management</h3>
        <p class="text-text-secondary mb-4">Manage user accounts, roles, and permissions</p>
        <%= link_to admin_users_path, class: "btn-hero-primary inline-flex items-center px-4 py-2 rounded-xl font-semibold transition-all duration-300 hover:scale-105" do %>
          <span>Manage Users</span>
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </div>

      <!-- Content Management -->
      <div class="glass-surface-lg rounded-3xl p-6 shadow-soft-xl border border-glass-border-2">
        <h3 class="text-text-primary text-xl font-bold mb-4">ğŸ“ Content Management</h3>
        <p class="text-text-secondary mb-4">Manage posts, events, and other content</p>
        <%= link_to admin_posts_path, class: "btn-hero-secondary inline-flex items-center px-4 py-2 rounded-xl font-semibold transition-all duration-300 hover:scale-105" do %>
          <span>Manage Posts</span>
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </div>

      <!-- Forum Management -->
