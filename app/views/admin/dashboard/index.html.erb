        <div class="space-y-3">
          <% @recent_events.each do |event| %>
            <div class="flex items-center justify-between p-3 rounded-xl bg-glass-surface-1">
              <div>
                <p class="text-text-primary font-medium"><%= truncate(event.title, length: 30) %></p>
                <p class="text-text-tertiary text-sm">by <%= event.user.name %></p>
