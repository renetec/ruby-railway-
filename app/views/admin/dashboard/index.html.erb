        <h3 class="text-text-primary text-xl font-bold mb-4">ğŸ’¬ Forum Management</h3>
        <p class="text-text-secondary mb-4">Manage forum categories and moderation</p>
        <%= link_to admin_forum_categories_path, class: "btn-hero-accent inline-flex items-center px-4 py-2 rounded-xl font-semibold transition-all duration-300 hover:scale-105" do %>
          <span>Manage Forum</span>
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Recent Users -->
      <div class="glass-surface-lg rounded-3xl p-6 shadow-soft-xl border border-glass-border-2">
        <h3 class="text-text-primary text-xl font-bold mb-4">ğŸ‘¥ Recent Users</h3>
        <div class="space-y-3">
          <% @recent_users.each do |user| %>
            <div class="flex items-center justify-between p-3 rounded-xl bg-glass-surface-1">
              <div>
                <p class="text-text-primary font-medium"><%= user.name %></p>
                <p class="text-text-tertiary text-sm"><%= user.email %></p>
              </div>
              <span class="text-text-secondary text-xs">
                <%= time_ago_in_words(user.created_at) %> ago
              </span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Recent Posts -->
      <div class="glass-surface-lg rounded-3xl p-6 shadow-soft-xl border border-glass-border-2">
        <h3 class="text-text-primary text-xl font-bold mb-4">ğŸ“ Recent Posts</h3>
        <div class="space-y-3">
          <% @recent_posts.each do |post| %>
            <div class="flex items-center justify-between p-3 rounded-xl bg-glass-surface-1">
              <div>
                <p class="text-text-primary font-medium"><%= truncate(post.title, length: 30) %></p>
                <p class="text-text-tertiary text-sm">by <%= post.user.name %></p>
              </div>
              <span class="text-text-secondary text-xs">
                <%= time_ago_in_words(post.created_at) %> ago
