      <!-- Products Count -->
      <div class="glass-surface-lg rounded-3xl p-6 shadow-soft-xl border border-glass-border-2">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-text-secondary text-sm font-medium">Products</p>
            <p class="text-text-primary text-3xl font-bold"><%= @products_count %></p>
          </div>
          <div class="w-12 h-12 bg-gradient-to-r from-electric-blue to-emerald-green rounded-2xl flex items-center justify-center">
            <span class="text-white text-xl">ğŸ›ï¸</span>
          </div>
        </div>
      </div>

      <!-- Businesses Count -->
      <div class="glass-surface-lg rounded-3xl p-6 shadow-soft-xl border border-glass-border-2">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-text-secondary text-sm font-medium">Businesses</p>
