      <!-- Contact Form -->
      <div class="border-t pt-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4"><%= t('products.contact_form.contact_seller') %></h3>
        <form id="seller-contact-form" class="space-y-4" onsubmit="handleSellerContact(event)">
