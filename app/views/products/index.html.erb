<% content_for :title, t('products.index.title') %>

<div class="min-h-screen relative overflow-hidden">
  <!-- Stunning Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-bg via-secondary-bg to-primary-bg"></div>
  
  <div class="container-wide relative z-10">
    <!-- Epic Header Section -->
    <div class="text-center mb-20 animate-slide-up">
      <div class="inline-flex items-center px-6 py-3 bg-glass-bg backdrop-filter backdrop-blur-lg border border-glass-border rounded-full mb-8">
        <span class="w-3 h-3 bg-emerald-green rounded-full mr-4 animate-pulse"></span>
        <span class="text-text-secondary text-sm font-medium font-display"><%= t('products.index.subtitle') %></span>
      </div>
      
      <h1 class="font-display text-2xl lg:text-3xl font-black text-text-primary mb-8 leading-tight">
        <%= t('products.index.community') %>
        <br>
        <span class="bg-gradient-to-r from-emerald-green via-electric-blue to-vibrant-purple bg-clip-text text-transparent"><%= t('products.index.marketplace') %></span>
      </h1>
      
      <p class="font-content text-xl text-text-secondary max-w-4xl mx-auto mb-12 leading-relaxed">
        <%= t('products.index.description') %>
      </p>
      
      <% if user_signed_in? %>
        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <%= link_to my_products_products_path, class: "btn-secondary-lg" do %>
            <span class="relative z-10 flex items-center font-display">
              <%= t('products.index.my_products') %>
              <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
              </svg>
            </span>
          <% end %>
          <%= link_to new_product_path, class: "btn-primary-lg" do %>
            <span class="relative z-10 flex items-center font-display">
              <%= t('products.index.list_product') %>
              <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>
  
    <div class="bento-grid-layout">
      <!-- Filters Sidebar -->
      <div class="lg:col-span-1">
        <div class="card-stunning overflow-hidden sticky top-4">
          <div class="bg-gradient-to-r from-emerald-green/10 to-electric-blue/10 backdrop-filter backdrop-blur-sm px-6 py-4 border-b border-glass-border">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-gradient-to-br from-emerald-green to-electric-blue rounded-2xl flex items-center justify-center shadow-lg">
                <span class="text-white text-lg">ðŸ”Ž</span>
              </div>
              <h3 class="font-display text-xl font-bold text-text-primary"><%= t('products.index.filter.title') %></h3>
            </div>
          </div>
          
          <div class="p-6">
        
            <%= form_with url: products_path, method: :get, local: true, class: "space-y-6" do |form| %>
              <!-- Search -->
              <div class="form-group">
                <%= form.label :search, t('products.index.filter.search'), class: "form-label" %>
                <%= form.text_field :search, placeholder: t('products.index.filter.search_placeholder'), 
                                   value: params[:search], 
                                   class: "input-modern" %>
              </div>
          
              <!-- Category -->
              <div class="form-group">
                <%= form.label :category, t('products.index.filter.category'), class: "form-label" %>
                <%= form.select :category, 
                               options_for_select([[t('products.index.filter.all_categories'), ""]] + @categories.map { |cat| [cat.humanize, cat] }, params[:category]),
                               {}, 
                               { class: "input-modern" } %>
              </div>
          
              <!-- Condition -->
              <div class="form-group">
                <%= form.label :condition, t('products.index.filter.condition'), class: "form-label" %>
                <%= form.select :condition, 
                               options_for_select([[t('products.index.filter.all_conditions'), ""]] + @conditions.map { |cond| [cond.humanize, cond] }, params[:condition]),
                               {}, 
                               { class: "input-modern" } %>
              </div>
          
              <!-- Location -->
              <div class="form-group">
                <%= form.label :location, t('products.index.filter.location'), class: "form-label" %>
                <%= form.text_field :location, placeholder: t('products.index.filter.location_placeholder'), 
                                   value: params[:location], 
                                   class: "input-modern" %>
              </div>
          
              <!-- Price Range -->
              <div class="form-group">
                <label class="form-label"><%= t('products.index.filter.price_range') %></label>
                <div class="space-y-2">
                  <% @price_ranges.each do |range| %>
                    <div class="radio-modern">
                      <%= radio_button_tag :price_range, "#{range[:min]}-#{range[:max]}", 
                                          params[:min_price] == range[:min].to_s && params[:max_price] == range[:max].to_s,
                                          class: "radio-input" %>
                      <%= label_tag "price_range_#{range[:min]}_#{range[:max]}", range[:label], class: "radio-label" %>
                    </div>
                  <% end %>
                  <%= hidden_field_tag :min_price, params[:min_price] %>
                  <%= hidden_field_tag :max_price, params[:max_price] %>
                </div>
              </div>
          
              <div class="space-y-3">
                <%= form.submit t('products.index.filter.apply_filters'), class: "btn-primary-full" %>
                <%= link_to t('products.index.filter.clear_filters'), products_path, class: "btn-secondary-full" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- Products Grid -->
      <div class="lg:col-span-3">
        <% if @products.any? %>
          <div class="bento-grid-layout gap-8 mb-12">
          <% @products.each do |product| %>
              <div class="card-stunning overflow-hidden group hover:scale-105 transition-all duration-500 animate-slide-up">
                <% if product.images.attached? %>
                  <div class="relative h-32 overflow-hidden">
                    <%= image_tag product.images.first, alt: product.name, class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" %>
                    <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent"></div>
                    <% if product.featured? %>
                      <span class="absolute top-3 right-3 inline-flex items-center px-3 py-1 bg-gradient-to-r from-warm-gold/90 to-emerald-green/90 backdrop-filter backdrop-blur-sm border border-warm-gold/40 rounded-full text-sm font-bold text-white">
                        <span class="w-2 h-2 bg-warm-gold rounded-full mr-2 animate-pulse"></span>
                        <%= t('products.index.featured') %>
                      </span>
                    <% end %>
                    <% if product.sold? %>
                      <div class="absolute inset-0 bg-black/70 backdrop-filter backdrop-blur-sm flex items-center justify-center">
                        <span class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-red-500 to-red-600 border border-red-400 rounded-2xl font-bold text-white shadow-2xl">
                          <%= t('products.index.sold') %>
                        </span>
                      </div>
                    <% end %>
                  </div>
                <% else %>
                  <div class="bg-gradient-to-br from-emerald-green to-electric-blue h-32 flex items-center justify-center relative">
                    <div class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent"></div>
                    <span class="text-white text-lg font-bold relative z-10"><%= t('products.index.no_image') %></span>
                  </div>
                <% end %>
                
                <div class="p-6">
                  <div class="flex items-center justify-between mb-4">
                    <span class="inline-flex items-center px-3 py-1 bg-gradient-to-r from-emerald-green/20 to-electric-blue/20 border border-emerald-green/30 rounded-full text-sm font-bold text-emerald-green">
                      <%= product.category.humanize %>
                    </span>
                    <span class="inline-flex items-center px-3 py-1 bg-gradient-to-r from-electric-blue/20 to-vibrant-purple/20 border border-electric-blue/30 rounded-full text-sm font-bold text-electric-blue">
                      <%= product.condition.humanize %>
                    </span>
                  </div>
                
                  <h3 class="font-display text-xl font-bold text-text-primary group-hover:text-electric-blue transition-colors mb-3">
                    <%= link_to product.name, product_path(product) %>
                  </h3>
                
                  <p class="font-content text-text-secondary mb-4 leading-relaxed">
                    <%= truncate(product.description, length: 80) %>
                  </p>
                
                  <div class="flex items-center justify-between mb-4">
                    <span class="font-display text-3xl font-black bg-gradient-to-r from-emerald-green to-electric-blue bg-clip-text text-transparent">
                      $<%= product.price %>
                    </span>
                    <div class="flex items-center text-text-secondary">
                      <span class="w-5 h-5 bg-gradient-to-br from-emerald-green to-electric-blue rounded-lg flex items-center justify-center mr-2">
                        <span class="text-white text-xs"></span>
                      </span>
                      <span class="font-medium"><%= product.location %></span>
                    </div>
                  </div>
                
                  <div class="flex items-center justify-between">
                    <span class="text-text-secondary font-medium">
                      <%= t('products.index.by', name: product.user.name) %>
                    </span>
                    <%= link_to t('products.index.view_details'), product_path(product), class: "text-electric-blue hover:text-vibrant-purple font-bold transition-colors" %>
                  </div>
                </div>
              </div>
          <% end %>
          </div>
          
          <!-- Pagination -->
          <div class="flex justify-center mt-12">
            <%= paginate @products if respond_to?(:paginate) %>
          </div>
        <% else %>
          <div class="text-center py-16">
            <div class="w-24 h-24 mx-auto mb-8 bg-gradient-to-br from-emerald-green/20 to-electric-blue/20 backdrop-filter backdrop-blur-sm border border-glass-border rounded-3xl flex items-center justify-center">
              <span class="text-4xl">ðŸ›’</span>
            </div>
            <h3 class="font-display text-3xl font-bold text-text-primary mb-6"><%= t('products.index.no_products') %></h3>
            <p class="font-content text-text-secondary mb-8 text-lg max-w-md mx-auto leading-relaxed">
              <%= t('products.index.no_products_description') %>
            </p>
            <% if user_signed_in? %>
              <%= link_to new_product_path, class: "btn-primary-lg" do %>
                <span class="relative z-10 flex items-center font-display">
                  <%= t('products.index.list_first_product') %>
                  <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                </span>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
// Handle price range radio buttons with modern styling
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('input[name="price_range"]').forEach(radio => {
    radio.addEventListener('change', function() {
      const [min, max] = this.value.split('-');
      const minInput = document.querySelector('input[name="min_price"]');
      const maxInput = document.querySelector('input[name="max_price"]');
      
      if (minInput) minInput.value = min;
      if (maxInput) maxInput.value = max;
    });
  });
});
</script>