<!-- Page Header with Pacomien Logo -->
<div class="text-center mb-12">
  <!-- Title only -->
  <div class="flex items-center justify-center mb-6">
    <h1 class="text-display text-4xl font-black text-text-primary">
      <%= title %>
    </h1>
  </div>
  
  <!-- Subtitle if provided -->
  <% if defined?(subtitle) && subtitle.present? %>
    <p class="text-lg text-text-secondary max-w-2xl mx-auto leading-relaxed font-content">
      <%= subtitle %>
    </p>
  <% end %>
  
  <!-- Decorative Line -->
  <div class="flex items-center justify-center mt-8">
    <div class="flex-1 h-px bg-gradient-to-r from-transparent via-electric-blue/30 to-transparent max-w-xs"></div>
    <div class="mx-4 w-2 h-2 bg-gradient-to-br from-electric-blue to-vibrant-purple rounded-full"></div>
    <div class="flex-1 h-px bg-gradient-to-r from-transparent via-vibrant-purple/30 to-transparent max-w-xs"></div>
  </div>
</div>