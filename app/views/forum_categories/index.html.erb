<% content_for :title, "Community Forum" %>

<div class="min-h-screen relative overflow-hidden">
  <!-- Stunning Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-bg via-secondary-bg to-primary-bg"></div>
  
  <div class="max-w-7xl mx-auto px-6 py-16 relative z-10">
    <!-- Epic Header Section -->
    <div class="text-center mb-20 animate-slide-up">
      <div class="inline-flex items-center px-6 py-3 bg-glass-bg backdrop-filter backdrop-blur-lg border border-glass-border rounded-full mb-8">
        <span class="w-3 h-3 bg-vibrant-purple rounded-full mr-4 animate-pulse"></span>
        <span class="text-text-secondary text-sm font-medium font-display">Community Discussions</span>
      </div>
      
      <h1 class="font-display text-2xl lg:text-3xl font-black text-text-primary mb-8 leading-tight">
        Community
        <br>
        <span class="bg-gradient-to-r from-electric-blue via-vibrant-purple to-emerald-green bg-clip-text text-transparent">Forum</span>
      </h1>
      
      <p class="font-content text-xl text-text-secondary max-w-4xl mx-auto mb-12 leading-relaxed">
        Connect with neighbors, share brilliant ideas, ask meaningful questions, and build extraordinary conversations that shape our vibrant community space.
      </p>
      
      <% if user_signed_in? %>
        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <%= link_to "#", class: "group relative overflow-hidden bg-gradient-to-r from-electric-blue to-vibrant-purple px-8 py-4 rounded-2xl font-bold text-text-primary shadow-2xl transform hover:scale-105 transition-all duration-500 inline-flex items-center" do %>
            <span class="relative z-10 flex items-center font-display">
              My Activity
              <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </span>
          <% end %>
          <%= link_to "#", class: "group relative overflow-hidden bg-glass-bg backdrop-filter backdrop-blur-lg border border-glass-border px-8 py-4 rounded-2xl font-bold text-text-primary hover:bg-surface-hover transition-all duration-500 inline-flex items-center" do %>
            <span class="relative z-10 flex items-center font-display">
              Browse All Threads
              <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <div class="grid lg:grid-cols-3 gap-8">
      <!-- Forum Categories -->
      <div class="lg:col-span-2">
        <div class="card-stunning overflow-hidden mb-8">
          <div class="bg-gradient-to-r from-electric-blue/10 to-vibrant-purple/10 backdrop-filter backdrop-blur-sm px-8 py-6 border-b border-glass-border">
            <div class="flex items-center justify-between">
              <h2 class="font-display text-2xl font-bold text-text-primary">Discussion Categories</h2>
              <div class="flex items-center px-4 py-2 bg-glass-bg backdrop-filter backdrop-blur-lg border border-glass-border rounded-full">
                <span class="w-2 h-2 bg-electric-blue rounded-full mr-2 animate-pulse"></span>
                <span class="text-sm text-text-secondary font-medium">
                  <%= @forum_categories.count %> categories
                </span>
              </div>
            </div>
          </div>
          
          <% if @forum_categories.any? %>
            <% @forum_categories.each_with_index do |category, index| %>
              <div class="border-b border-glass-border/30 last:border-b-0">
                <div class="p-8 hover:bg-surface-hover transition-all duration-300 group">
                  <div class="flex items-start justify-between">
                    <div class="flex-1">
                      <div class="flex items-center mb-6">
                        <div class="w-14 h-14 bg-gradient-to-br from-electric-blue to-vibrant-purple rounded-2xl flex items-center justify-center mr-6 shadow-xl group-hover:scale-110 transition-transform duration-300">
                          <span class="text-2xl">ðŸ’¬</span>
                        </div>
                        <div>
                          <h3 class="font-display text-xl font-bold text-text-primary group-hover:text-electric-blue transition-colors mb-2">
                            <%= link_to category.name, forum_category_path(category) %>
                          </h3>
                          <% if category.forum_threads.count > 0 %>
                            <span class="inline-flex items-center px-3 py-1 bg-gradient-to-r from-electric-blue/20 to-vibrant-purple/20 border border-electric-blue/30 rounded-full text-xs font-bold text-electric-blue">
                              <%= pluralize(category.forum_threads.count, 'thread') %>
                            </span>
                          <% end %>
                        </div>
                      </div>
                      
                      <p class="font-content text-text-secondary mb-6 leading-relaxed text-lg">
                        <%= category.description %>
                      </p>
                      
                      <% if category.forum_threads.recent.first %>
                        <% latest_thread = category.forum_threads.recent.first %>
                        <div class="bg-surface-bg backdrop-filter backdrop-blur-sm border border-glass-border rounded-xl p-4">
                          <div class="flex items-center space-x-4">
                            <div class="w-10 h-10 bg-gradient-to-br from-vibrant-purple to-electric-blue rounded-xl flex items-center justify-center">
                              <span class="text-white text-sm font-bold"><%= latest_thread.user.name.first.upcase %></span>
                            </div>
                            <div class="flex-1 min-w-0">
                              <div class="text-sm font-bold text-text-primary mb-1">
                                Latest: <%= link_to latest_thread.title, [category, latest_thread], class: "text-electric-blue hover:text-vibrant-purple transition-colors" %>
                              </div>
                              <div class="text-xs text-text-secondary">
                                by <span class="font-medium"><%= latest_thread.user.name %></span> â€¢ 
                                <span class="text-emerald-green"><%= time_ago_in_words(latest_thread.updated_at) %> ago</span>
                              </div>
                            </div>
                          </div>
                        </div>
                      <% end %>
                    </div>
                    
                    <div class="text-center ml-8">
                      <div class="card-stunning p-4 group-hover:scale-105 transition-transform duration-300">
                        <div class="font-display text-3xl font-black bg-gradient-to-r from-electric-blue to-vibrant-purple bg-clip-text text-transparent mb-2">
                          <%= category.forum_threads.count %>
                        </div>
                        <div class="text-xs text-text-secondary font-bold uppercase tracking-wider">threads</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="p-16 text-center">
              <div class="w-24 h-24 mx-auto mb-8 bg-gradient-to-br from-electric-blue/20 to-vibrant-purple/20 backdrop-filter backdrop-blur-sm border border-glass-border rounded-3xl flex items-center justify-center">
                <span class="text-4xl">ðŸ’¬</span>
              </div>
              <h3 class="font-display text-3xl font-bold text-text-primary mb-6">No categories yet</h3>
              <p class="font-content text-text-secondary mb-8 text-lg max-w-md mx-auto leading-relaxed">
                Be the first to start an amazing conversation in our vibrant community forum.
              </p>
              <% if user_signed_in? && current_user.moderator? %>
                <%= link_to "#", class: "group relative overflow-hidden bg-gradient-to-r from-electric-blue to-vibrant-purple px-8 py-4 rounded-2xl font-bold text-text-primary shadow-2xl transform hover:scale-105 transition-all duration-500 inline-flex items-center" do %>
                  <span class="relative z-10 flex items-center font-display">
                    Create First Category
                    <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                  </span>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Sidebar -->
      <div class="lg:col-span-1 space-y-8">
        <!-- Recent Activity -->
        <div class="card-stunning overflow-hidden">
          <div class="bg-gradient-to-r from-emerald-green/10 to-electric-blue/10 backdrop-filter backdrop-blur-sm px-6 py-4 border-b border-glass-border">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-gradient-to-br from-emerald-green to-electric-blue rounded-2xl flex items-center justify-center shadow-lg">
                <span class="text-white text-lg">âš¡</span>
              </div>
              <h3 class="font-display text-xl font-bold text-text-primary">Recent Activity</h3>
            </div>
          </div>
          <div class="p-6">
            <% if @recent_threads.any? %>
              <div class="space-y-4">
                <% @recent_threads.each do |thread| %>
                  <div class="group p-4 bg-surface-bg backdrop-filter backdrop-blur-sm border border-glass-border rounded-xl hover:bg-surface-hover transition-all duration-300">
                    <div class="font-bold text-text-primary group-hover:text-electric-blue transition-colors mb-2">
                      <%= link_to thread.title, [thread.forum_category, thread] %>
                    </div>
                    <div class="text-xs text-vibrant-purple mb-2 font-medium">
                      in <%= link_to thread.forum_category.name, thread.forum_category, class: "hover:text-electric-blue transition-colors" %>
                    </div>
                    <div class="flex items-center space-x-3 text-xs text-text-secondary">
                      <div class="w-6 h-6 bg-gradient-to-br from-vibrant-purple to-electric-blue rounded-lg flex items-center justify-center">
                        <span class="text-white text-xs font-bold"><%= thread.user.name.first.upcase %></span>
                      </div>
                      <span class="font-medium">by <%= thread.user.name %></span>
                      <span>â€¢</span>
                      <span class="text-emerald-green font-medium"><%= time_ago_in_words(thread.created_at) %> ago</span>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-electric-blue/20 to-vibrant-purple/20 backdrop-filter backdrop-blur-sm border border-glass-border rounded-2xl flex items-center justify-center">
                  <span class="text-2xl">ðŸ’¬</span>
                </div>
                <p class="text-text-secondary font-medium">No recent discussions</p>
              </div>
            <% end %>
          </div>
        </div>
        
        <!-- Forum Stats -->
        <div class="card-stunning overflow-hidden">
          <div class="bg-gradient-to-r from-electric-blue/10 to-vibrant-purple/10 backdrop-filter backdrop-blur-sm px-6 py-4 border-b border-glass-border">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-gradient-to-br from-electric-blue to-vibrant-purple rounded-2xl flex items-center justify-center shadow-lg">
                <span class="text-white text-lg">ðŸ“Š</span>
              </div>
              <h3 class="font-display text-xl font-bold text-text-primary">Forum Stats</h3>
            </div>
          </div>
          <div class="p-6 grid grid-cols-2 gap-4">
            <div class="card-stunning p-4 text-center group hover:scale-105 transition-transform duration-300">
              <div class="font-display text-2xl font-black bg-gradient-to-r from-electric-blue to-vibrant-purple bg-clip-text text-transparent mb-2">
                <%= @forum_categories.count %>
              </div>
              <div class="text-xs text-text-secondary font-bold uppercase tracking-wider">Categories</div>
            </div>
            <div class="card-stunning p-4 text-center group hover:scale-105 transition-transform duration-300">
              <div class="font-display text-2xl font-black bg-gradient-to-r from-emerald-green to-electric-blue bg-clip-text text-transparent mb-2">
                <%= ForumThread.count %>
              </div>
              <div class="text-xs text-text-secondary font-bold uppercase tracking-wider">Threads</div>
            </div>
            <div class="card-stunning p-4 text-center group hover:scale-105 transition-transform duration-300">
              <div class="font-display text-2xl font-black bg-gradient-to-r from-vibrant-purple to-warm-gold bg-clip-text text-transparent mb-2">
                <%= ForumReply.count %>
              </div>
              <div class="text-xs text-text-secondary font-bold uppercase tracking-wider">Replies</div>
            </div>
            <div class="card-stunning p-4 text-center group hover:scale-105 transition-transform duration-300">
              <div class="font-display text-2xl font-black bg-gradient-to-r from-warm-gold to-vibrant-purple bg-clip-text text-transparent mb-2">
                <%= User.count %>
              </div>
              <div class="text-xs text-text-secondary font-bold uppercase tracking-wider">Members</div>
            </div>
          </div>
        </div>
        
        <!-- Guidelines -->
        <div class="card-stunning overflow-hidden">
          <div class="bg-gradient-to-r from-warm-gold/10 to-emerald-green/10 backdrop-filter backdrop-blur-sm px-6 py-4 border-b border-glass-border">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-gradient-to-br from-warm-gold to-emerald-green rounded-2xl flex items-center justify-center shadow-lg">
                <span class="text-white text-lg">ðŸ“‹</span>
              </div>
              <h3 class="font-display text-xl font-bold text-text-primary">Community Guidelines</h3>
            </div>
          </div>
          <div class="p-6 space-y-4">
            <div class="flex items-start space-x-4 p-3 bg-surface-bg backdrop-filter backdrop-blur-sm border border-glass-border rounded-xl">
              <div class="w-2 h-2 bg-gradient-to-r from-electric-blue to-vibrant-purple rounded-full mt-3 flex-shrink-0"></div>
              <span class="text-text-secondary font-content leading-relaxed">Be respectful and courteous to all community members</span>
            </div>
            <div class="flex items-start space-x-4 p-3 bg-surface-bg backdrop-filter backdrop-blur-sm border border-glass-border rounded-xl">
              <div class="w-2 h-2 bg-gradient-to-r from-vibrant-purple to-emerald-green rounded-full mt-3 flex-shrink-0"></div>
              <span class="text-text-secondary font-content leading-relaxed">Stay on topic and choose the most appropriate category</span>
            </div>
            <div class="flex items-start space-x-4 p-3 bg-surface-bg backdrop-filter backdrop-blur-sm border border-glass-border rounded-xl">
              <div class="w-2 h-2 bg-gradient-to-r from-emerald-green to-warm-gold rounded-full mt-3 flex-shrink-0"></div>
              <span class="text-text-secondary font-content leading-relaxed">Search existing discussions before posting to avoid duplicates</span>
            </div>
            <div class="flex items-start space-x-4 p-3 bg-surface-bg backdrop-filter backdrop-blur-sm border border-glass-border rounded-xl">
              <div class="w-2 h-2 bg-gradient-to-r from-warm-gold to-electric-blue rounded-full mt-3 flex-shrink-0"></div>
              <span class="text-text-secondary font-content leading-relaxed">No spam, excessive self-promotion, or purely commercial posts</span>
            </div>
            <div class="flex items-start space-x-4 p-3 bg-surface-bg backdrop-filter backdrop-blur-sm border border-glass-border rounded-xl">
              <div class="w-2 h-2 bg-gradient-to-r from-electric-blue to-vibrant-purple rounded-full mt-3 flex-shrink-0"></div>
              <span class="text-text-secondary font-content leading-relaxed">Report inappropriate content to our dedicated moderators</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>