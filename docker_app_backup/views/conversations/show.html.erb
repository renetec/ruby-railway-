      <%= f.file_field :images, 
                       multiple: true, 
                       accept: "image/*,.pdf,.doc,.docx,.txt,.zip,.rar",
                       class: "hidden",
                       data: { 
                         messaging_target: "fileInput",
                         action: "change->messaging#handleFileSelect"
                       } %>
      
